package testing;

import java.lang.reflect.Array;

public class JaggedArray {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int size = 5;
		int arr[][]= new int[size][];
		int count=0;
		for(int i=0;i<=arr.length;i++){
			arr[i]= new int[i+1];
		}
       for(int i=0;i<arr.length;i++)
    	   for(int j=0;j<arr.length;j++)
    		   arr[i][j]= count++;
	}

}
